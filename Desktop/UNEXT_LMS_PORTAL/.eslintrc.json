{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  // refer https://eslint.org/docs/rules/ for more rules
  "rules": {
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "semi": ["error", "always"],
    "semi-style": ["error", "last"],
    "no-unreachable": "warn",
    "require-atomic-updates": "warn",
    "use-isnan": "warn",
    "curly": "warn",
    "eqeqeq": "warn",
    "no-else-return": "warn",
    "no-floating-decimal": "warn",
    "no-invalid-this": "error",
    "no-multi-spaces": "warn",
    "no-redeclare": "warn",
    "no-self-assign": "warn",
    "no-self-compare": "warn",
    "no-useless-return": "warn",
    "id-length": ["warn", {
      "min": 2,
      "exceptions": ["i", "j", "k"]
    }],
    "key-spacing": ["warn", {
      "beforeColon": false,
      "afterColon": true
    }],
    "no-lonely-if": "warn",
    "no-mixed-spaces-and-tabs": "warn",
    "no-multiple-empty-lines": ["warn", {
      "max": 1
    }],
    "no-trailing-spaces": ["warn", {
      "skipBlankLines": true
    }],
    "no-console": "warn",
    "no-dupe-args": "error",
    "no-dupe-keys": "warn",
    "no-duplicate-case": "error",
    "max-depth": ["warn", 4],
    "max-lines": ["warn", 1000],
    "max-lines-per-function": ["warn", 50],
    "max-nested-callbacks": ["warn", 4],
    "max-params": ["warn", 5],
    "no-case-declarations": "warn"
  }
}
